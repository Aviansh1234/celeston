<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CarbonCalcResult2">

    <TextView
        android:id="@+id/amounttvresult2"
        android:layout_width="@dimen/_169sdp"
        android:layout_height="wrap_content"
        android:lineHeight="25dp"
        android:layout_marginTop="@dimen/_30sdp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/josefinmedium"
        android:justificationMode="inter_word"
        android:text="Electric planes could have travelled you the same distance but with 0 carbon dioxide emmision."
        android:textColor="@color/mypurple"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/planeimagecarbonresult"
        android:layout_marginBottom="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>