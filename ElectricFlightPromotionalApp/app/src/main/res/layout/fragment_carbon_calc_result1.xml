<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CarbonCalcResult1">

    <TextView
        android:id="@+id/amounttvresult"
        android:layout_width="@dimen/_169sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/josefinmedium"
        android:justificationMode="inter_word"
        android:lineHeight="25dp"
        android:text="The total carbon footprint emitted by you by travelling short distances via cumbustion planes is 1.2g"
        android:textColor="@color/mypurple"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/similaritytvresult"
        android:layout_width="@dimen/_169sdp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_40sdp"
        android:lineHeight="25dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/josefinmedium"
        android:justificationMode="inter_word"
        android:text="This carbon footprint is similar to you travelling -------- kms via a petrol car."
        android:textColor="@color/mypurple"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>