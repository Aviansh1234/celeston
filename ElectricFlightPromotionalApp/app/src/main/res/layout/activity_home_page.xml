<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightyellow"
    tools:context=".HomePage">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        app:cardBackgroundColor="@color/lightyellow"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/aelecairlogo"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginLeft="@dimen/_24sdp"
                android:src="@drawable/fulllogowithname"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/cflogo"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginRight="@dimen/_23sdp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/cfimagehome"
                app:layout_constraintBottom_toBottomOf="@+id/aelecairlogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/aelecairlogo" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_46sdp"
                android:layout_marginRight="@dimen/_26sdp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="@dimen/_147sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/josefinsemibold"
                    android:lineHeight="26dp"
                    android:text="One change could make a huge difference"
                    android:textColor="@color/green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_gravity=""
                    android:src="@drawable/carbonoutputbackground"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/homeCircleNumber"
                    android:layout_width="@dimen/_38sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:autoSizeTextType="uniform"
                    android:text="10000"
                    android:textColor="@color/brown2"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                    app:layout_constraintEnd_toEndOf="@+id/imageView7"
                    app:layout_constraintStart_toStartOf="@+id/imageView7"
                    app:layout_constraintTop_toTopOf="@+id/imageView7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="g of co2"
                    android:textColor="@color/brown2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/imageView7"
                    app:layout_constraintTop_toBottomOf="@+id/homeCircleNumber" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_230sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_46sdp"
                android:layout_marginRight="@dimen/_15sdp"
                app:cardBackgroundColor="@color/lightyellow"
                app:cardCornerRadius="4dp"
                app:cardElevation="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/josefinmedium"
                        android:text="Real time carbon emission data"
                        android:textColor="@color/brown2"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView7"
                        android:lineHeight="@dimen/_2sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:fontFamily="@font/josefinsemibold"
                        android:text="Co2 emitted by normal ariplanes"
                        android:textColor="@color/green2"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView6" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_marginRight="@dimen/_18sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView7">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/qustionsbackground"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/view3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/qustionsbackground"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/view3"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
                            app:layout_constraintEnd_toEndOf="@+id/imageView8"
                            app:layout_constraintStart_toStartOf="@+id/imageView8"
                            app:layout_constraintTop_toTopOf="@+id/imageView8">

                            <TextView
                                android:id="@+id/tvYesterdayEmission"
                                android:layout_width="@dimen/_41sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:autoSizeTextType="uniform"
                                android:text="24308173574859"
                                android:textColor="@color/brown2"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="g of CO2"
                                android:textColor="@color/brown2" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView9"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/imageView9"
                            app:layout_constraintTop_toTopOf="@+id/imageView9">

                            <TextView
                                android:id="@+id/tvHourEmission"
                                android:layout_width="@dimen/_41sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:autoSizeTextType="uniform"
                                android:text="24308173574859"
                                android:textColor="@color/brown2"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="g of CO2"
                                android:textColor="@color/brown2" />
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/view4"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefinmedium"
                        android:text="Yesterday"
                        android:textColor="@color/brown2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/view4"
                        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefinmedium"
                        android:text="In an hour"
                        android:textColor="@color/brown2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                        app:layout_constraintStart_toEndOf="@+id/view4"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_230sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_46sdp"
                android:layout_marginRight="@dimen/_15sdp"
                app:cardBackgroundColor="@color/lightyellow"
                app:cardCornerRadius="4dp"
                app:cardElevation="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView69"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/josefinmedium"
                        android:text="Real time carbon emission data"
                        android:textColor="@color/brown2"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView79"
                        android:layout_width="0dp"
                        android:lineHeight="20dp"
                        android:textAlignment="center"
                        android:paddingTop="@dimen/_2sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:fontFamily="@font/josefinsemibold"
                        android:justificationMode="inter_word"
                        android:text="This much CO2 wouldnt have been emitted if electric planes were used"
                        android:textColor="@color/green2"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView69" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout321"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_18sdp"
                        android:layout_marginRight="@dimen/_18sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView79">

                        <ImageView
                            android:id="@+id/imageView8231"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginRight="@dimen/_7sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/qustionsbackground"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/view33"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <View
                            android:id="@+id/view33"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/imageView39"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/qustionsbackground"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/view33"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView8231"
                            app:layout_constraintEnd_toEndOf="@+id/imageView8231"
                            app:layout_constraintStart_toStartOf="@+id/imageView8231"
                            app:layout_constraintTop_toTopOf="@+id/imageView8231">

                            <TextView
                                android:id="@+id/tvYesterdaySaved"
                                android:layout_width="@dimen/_41sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:autoSizeTextType="uniform"
                                android:text="24308173574859"
                                android:textColor="@color/brown2"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="g of CO2"
                                android:textColor="@color/brown2" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView39"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/imageView39"
                            app:layout_constraintTop_toTopOf="@+id/imageView39">

                            <TextView
                                android:id="@+id/tvHourSaving"
                                android:layout_width="@dimen/_41sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:autoSizeTextType="uniform"
                                android:text="24308173574859"
                                android:textColor="@color/brown2"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="g of CO2"
                                android:textColor="@color/brown2" />
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/view42"
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout321"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/constraintLayout321" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefinmedium"
                        android:text="Yesterday"
                        android:textColor="@color/brown2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/view42"
                        app:layout_constraintStart_toStartOf="@+id/constraintLayout321"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout321" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefinmedium"
                        android:text="In an hour"
                        android:textColor="@color/brown2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/constraintLayout321"
                        app:layout_constraintStart_toEndOf="@+id/view42"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout321" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_210sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_60sdp"
                android:layout_marginBottom="@dimen/_32sdp"
                android:background="@drawable/qustionsbackground">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/josefinmedium"
                    android:justificationMode="inter_word"
                    android:lineHeight="27dp"
                    android:text="Check out the simulator, made for increaing the awareness of using electric airplanes"
                    android:textColor="@color/brown2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/continueHomePage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_24sdp"
                    android:background="@drawable/buttoncontinuebackground"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/continueHomePagebtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_53sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginRight="@dimen/_53sdp"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:fontFamily="@font/josefinmedium"
                        android:stateListAnimator="@null"
                        android:text="CONTINUE"
                        android:textColor="@color/brown2"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>